{
  "name": "my-own-game",
  "version": "1.0.0",
  "private": true,
  "description": "Личный проект «Своя игра»",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mifomen/my-own-game.git"
  },
  "bugs": {
    "url": "https://github.com/mifomen/my-own-game.git/issues"
  },
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "^1.0.0",
    "browser-sync": "2.26.14",
    "eslint": "7.18.0",
    "eslint-config-htmlacademy": "4.1.0",
    "stylelint": "^14.5.3",
    "stylelint-config-htmlacademy": "^0.1.12"
  },
  "license": "MIT",
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"src/css/**/*.css\"",
    "start": "browser-sync start --server --ss \"src\" --no-notify --no-ui --files \"./src/**/*.*\"",
    "test": "eslint src/js/ && npm run editorconfig && npm run stylelint"
  },
  "editorconfig-cli": [
    "src/**/*.html",
    "src/**/*.js",
    "src/**/*.css"
  ],
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  }
}
